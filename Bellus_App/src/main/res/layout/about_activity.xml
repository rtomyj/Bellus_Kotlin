<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/parentBackgroundColor"
                  android:orientation="vertical">

        <ImageView
            android:id="@+id/roseIV"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:baseline="@dimen/cardview_default_elevation"/>

        <TextView
            style="@style/InfoTextBig"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="Rose Gomez"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneIV"
                android:layout_marginRight="30dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:onClick="smsClick"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/emailIV"
                android:layout_marginRight="35dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="emailClick"
                android:adjustViewBounds="true"/>


            <ImageView
                android:id="@+id/instaIV"
                android:layout_marginRight="35dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:adjustViewBounds="true"/>


            <ImageView
                android:id="@+id/fbIV"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:adjustViewBounds="true"/>

        </LinearLayout>


        <TextView
            style="@style/InfoTextSmall"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Bellus is an app you can use to book appointments for cosmetic services. To inquire about services and prices use the contact information above."/>

    </LinearLayout>

   </ScrollView>
