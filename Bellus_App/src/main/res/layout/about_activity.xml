<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/parentBackgroundColor"
                  android:orientation="vertical">

        <ImageView
            android:id="@+id/roseIV"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:adjustViewBounds="true"
            android:baseline="@dimen/cardview_default_elevation"/>

        <TextView
            style="@style/InfoTextBig"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="Rose Gomez"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                style="@style/SmallIcon"
                android:id="@+id/phoneIV"
                android:onClick="smsClick"
                />

            <ImageView
                style="@style/SmallIcon"
                android:id="@+id/emailIV"
                android:onClick="emailClick"/>


            <ImageView
                style="@style/SmallIcon"
                android:id="@+id/instaIV"
                android:onClick="igClick"
                android:scaleType="centerCrop"
                />


            <ImageView
                style="@style/SmallIcon"
                android:id="@+id/fbIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="0dp"
                android:onClick="fbClick"
                />

        </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/InfoTextSmall"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text=""/>

            <Button
                style="@style/PurpleButton"
                android:text="About Rose"
                android:onClick="showAboutRose"/>
            <Button
                style="@style/PurpleButton"
                android:text="Policies"
                android:onClick="showBookingPolicy"/>


        </LinearLayout>

    </ScrollView>

    </LinearLayout>

