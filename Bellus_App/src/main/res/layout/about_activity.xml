<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e4e4e4"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">


        <ImageView
            android:id="@+id/roseIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:elevation="8dp"
            android:scaleType="center"
            />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@color/parentBackgroundColor"
        android:elevation="5dp"
        android:orientation="vertical"
        >

        <TextView
            style="@style/InfoTextHeader"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/rose_name"
            android:textSize="32sp"/>
        <TextView
            style="@style/InfoTextMedium"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Artist"
            android:paddingBottom="5dp"
            />



        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/phoneIV"
                        style="@style/SmallIcon"
                        android:onClick="smsClick"
                        />

                    <ImageView
                        android:id="@+id/emailIV"
                        style="@style/SmallIcon"
                        android:onClick="emailClick"/>


                    <ImageView
                        android:id="@+id/instaIV"
                        style="@style/SmallIcon"
                        android:onClick="igClick"
                        android:scaleType="centerCrop"
                        />


                    <ImageView
                        android:id="@+id/fbIV"
                        style="@style/SmallIcon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="0dp"
                        android:onClick="fbClick"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>


                <TextView
                    style="@style/InfoTextSmall"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text=""/>

                <TextView
                    style="@style/PurpleButton"
                    android:onClick="showAboutRose"
                    android:gravity="center"
                    android:text="@string/about_me"/>

                <TextView
                    style="@style/PurpleButton"
                    android:onClick="showBookingPolicy"
                    android:text="@string/policies"
                    android:gravity="center"

                    />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>

