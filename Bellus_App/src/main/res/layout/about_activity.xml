<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/parentBackgroundColor"
                  android:orientation="vertical">

        <ImageView
            android:id="@+id/roseIV"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:baseline="@dimen/cardview_default_elevation"/>

        <TextView
            style="@style/InfoTextBig"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="Rose Gomez"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneIV"
                android:layout_marginRight="25dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="smsClick"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/emailIV"
                android:layout_marginRight="25dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="emailClick"
                android:adjustViewBounds="true"/>


            <ImageView
                android:id="@+id/instaIV"
                android:layout_marginRight="25dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="igClick"
                android:scaleType="centerCrop"
                />


            <ImageView
                android:id="@+id/fbIV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:onClick="fbClick"
                android:adjustViewBounds="true"/>

        </LinearLayout>


        <TextView
            style="@style/InfoTextSmall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Mother of a little girl and boy. I have been doing cosmetology for more than 5 years. I have worked in a popular cosmetics store for years, but come to realize that I love to make people beautiful. Doing cosmetology is more fun than selling cosmetics. I believe the face is a canvas and I happen to be a pretty darn good artist. \n\nIf you have any questions feel free to contact me using the buttons above."/>

    </LinearLayout>

   </ScrollView>
