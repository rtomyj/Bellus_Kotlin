<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="LightHeaderText">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="LightSubHeaderText" parent="LightHeaderText">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CardViewBase" parent="CardView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="cardCornerRadius">5dp</item>
    </style>

    <style name="InfoTextBig" >
    <item name="android:textSize">34sp</item>
    <item name="android:textColor">@color/header1TextColor</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>

</style>

    <style name="InfoTextMedium" >
    <item name="android:textSize">21sp</item>
    <item name="android:textColor">@color/header2TextColor</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">sans-serif-medium</item>

</style>

    <style name="InfoTextSmall" >
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/header3TextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>

    <style name="SingleLineEditText" parent="InfoTextSmall">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/parentBackgroundColor</item>
    </style>


</resources>
