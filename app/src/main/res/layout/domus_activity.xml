<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/parentBackgroundColor"
    tools:context="com.corp_awesome.bellus.domus">

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="125dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greenBackground"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/booking_IV"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="90dp"
                android:layout_weight="65"/>

            <TextView
                style="@style/LightHeaderText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="35"
                android:text="Book Appointment"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
    android:background="@color/childBackgroundColor"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="125dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tealBackground"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:layout_gravity="center"
            style="@style/LightHeaderText"
            android:text="Gallery"/>

        <ImageView
            android:id="@+id/gallery_IV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"/>

    </LinearLayout>
</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:background="@color/childBackgroundColor"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="125dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/amberBackground"
            android:padding="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/about_IV"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_weight="65"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:layout_gravity="center"
                style="@style/LightHeaderText"
                android:text="About"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.widget.LinearLayout>
